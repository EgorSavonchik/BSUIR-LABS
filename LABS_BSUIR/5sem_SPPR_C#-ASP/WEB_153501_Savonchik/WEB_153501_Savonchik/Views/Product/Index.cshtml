@{ 
    @model ListModel<Telephone>
    var partialPageModel = (Model, false);
}




<div >
	<h2>Список товаров</h2>
    <!-- выбор категории -->
	<div class="border-2">
        <ul class="nav ">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button"
                    aria-expanded="false">@ViewData["currentFirm"]
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <a class="dropdown-item" asp-controller="product" asp-route-firm=@null>Все</a>
                    </li>
                    @foreach (var item in ViewData["firms"] as List<Firm>)
                    {
                    <li>
                        <a class="dropdown-item" asp-controller="product" asp-route-firm="@item.NormalizedName">
                                @item.Name
                        </a>
                    </li>
                    }
                </ul>
            </li>
        </ul>


        <div class="partial-list-container">
            <partial name="_ProductListPartial" model="partialPageModel"/>
        </div>
    </div>
</div>
