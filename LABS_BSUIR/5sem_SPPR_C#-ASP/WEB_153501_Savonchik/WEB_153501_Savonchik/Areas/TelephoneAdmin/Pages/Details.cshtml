<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

<div>
    <h4>Telephone</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone.FirmId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone.FirmId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone.ImageSource)
        </dt>
        <dt class="col-sm-10">
