        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telephone.ImageSource)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telephone.ImageSource)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Telephone?.Id">Edit</a> |
