@page
@model WEB_153501_Savonchik.Areas.TelephoneAdmin.Pages.EditModel

@{
    //Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Edit</title>
    </head>
    <body>

    <h4>Telephone</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Telephone.Id" />
                <div class="form-group">
                    <label asp-for="Telephone.Name" class="control-label"></label>
                    <input asp-for="Telephone.Name" class="form-control" />
                    <span asp-validation-for="Telephone.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone.Description" class="control-label"></label>
                    <input asp-for="Telephone.Description" class="form-control" />
                    <span asp-validation-for="Telephone.Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone.FirmId" class="control-label"></label>
                    <select asp-for="Telephone.FirmId" class="form-control" asp-items="ViewBag.FirmId"></select>
                    <span asp-validation-for="Telephone.FirmId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telephone.Price" class="control-label"></label>
                    <input asp-for="Telephone.Price" class="form-control" />
                    <span asp-validation-for="Telephone.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" type="file" class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    </body>
</html>
