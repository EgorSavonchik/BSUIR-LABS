<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_153505_Savonchik.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_153505_Savonchik.UI"
    xmlns:pages="clr-namespace:_153505_Savonchik.UI.Pages">

    <FlyoutItem Title="ProgressBar">
        <Tab>
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="Brigades list">
        <Tab>
            <ShellContent
                Title="Brigades list"
                ContentTemplate="{DataTemplate pages:BrigadesManager}"
                Route="Brigades" />
        </Tab>
    </FlyoutItem>
</Shell>
