<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_153505_Malihtorovich.UI.Pages.WorkDetails"
             xmlns:models="clr-namespace:_153505_Malihtorovich.UI.ViewModels"
             x:DataType="models:WorkDetailsViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BindingContext = "WorkDetailsViewModel"
             xmlns:ent="clr-namespace:_153505_Malihtorovich.Domain.Entities;assembly=153505_Malihtorovich.Domain"
             Loaded="OnLoadPage"
             Title="WorkDetails">

    <VerticalStackLayout>
        <Image x:Name="image" HeightRequest="300" WidthRequest="400" HorizontalOptions="Start"/>
        <Label x:Name="nameLabel"/>
        <Label x:Name="desriptionLabel"/>
        <Label x:Name="qualityLabel"/>
        <Label x:Name="paymentLabel"/>
        <Label x:Name="durationLabel"/>

        <HorizontalStackLayout>
            <Button Text="Edit" Command="{Binding EditWorkCommand}"/>
            <Button Text="Add photo" Command="{Binding ChangePhotoCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>