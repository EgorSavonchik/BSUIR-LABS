<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_153505_Savonchik.UI.Pages.BrigadesManager"
             xmlns:local="clr-namespace:_153505_Savonchik.UI"
             xmlns:pages="clr-namespace:_153505_Savonchik.UI.Pages"
             xmlns:models="clr-namespace:_153505_Savonchik.UI.ViewModels"
             xmlns:ent="clr-namespace:_153505_Savonchik.Domain.Entities;assembly=153505_Savonchik.Domain"
             xmlns:conv="clr-namespace:_153505_Savonchik.UI.ValueConverters"
             x:DataType="models:BrigadesManagerViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BindingContext = "BrigadesManagerViewModel"
             Title="BrigadesManager">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <conv:QualityToColorValueConverter x:Key="QualityToColor"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior 
            EventName="Loaded"
            Command="{Binding UpdateGroupListCommand }"/>
    </ContentPage.Behaviors>

    <VerticalStackLayout>
        <Picker x:Name = "brigadePicker" 
                ItemsSource="{Binding Brigades}"
                ItemDisplayBinding="{Binding Name}" 
                SelectedItem="{Binding SelectedBrigade}">
            <Picker.Behaviors>
                <toolkit:EventToCommandBehavior 
                    EventName="SelectedIndexChanged"
                    Command="{Binding UpdateMembersListCommand}"/>
            </Picker.Behaviors>
        </Picker>

        <HorizontalStackLayout>
            <Label Text="Number of works:    " />
            <Label Text = "{Binding SelectedBrigade.NumberOfWorkers}"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout>
            <Button Text="Add brigade" Command="{Binding AddBrigadeCommand}"/>
            <Button Text="Add work" Command="{Binding AddWorkCommand}"/>
        </HorizontalStackLayout>

        <ScrollView HeightRequest="400">
            <CollectionView x:Name="worksView" ItemsSource="{Binding Works}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="ent:Work">
                        <Frame Margin="5,0" BackgroundColor="{Binding Quality, Converter={StaticResource QualityToColor} }">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source = {RelativeSource AncestorType = {x:Type models:BrigadesManagerViewModel} },
                                    Path = ShowDetailsCommand}" CommandParameter="{Binding}"/>
                            </Frame.GestureRecognizers>

                            <HorizontalStackLayout>
                                <toolkit:AvatarView ImageSource="{Binding imagePath}"></toolkit:AvatarView>
                                <Label Text= "{Binding Name}"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        
    </VerticalStackLayout>
</ContentPage>