<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_153505_Malihtorovich.UI.Pages.AddBrigade"
             xmlns:pages="clr-namespace:_153505_Malihtorovich.UI.Pages"
             xmlns:models="clr-namespace:_153505_Malihtorovich.UI.ViewModels"
             xmlns:ent="clr-namespace:_153505_Malihtorovich.Domain.Entities;assembly=153505_Malihtorovich.Domain"
             x:DataType="models:BrigadesManagerViewModel"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             BindingContext = "BrigadesManagerViewModel"
             Title="AddBrigade">
    
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Enter name: "/>
            <Entry x:Name="nameEntry"/>
        </HorizontalStackLayout>
        
        <HorizontalStackLayout>
            <Label Text="Enter number of worker: "/>
            <Entry x:Name="numberOfWorkerEntry"/>
        </HorizontalStackLayout>

        <Button Text="Add" Clicked="OnAddClicked"/>
    </VerticalStackLayout>
</ContentPage>