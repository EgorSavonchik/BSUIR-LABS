<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab_1.ProgressBar"
             Title="ProgressBar">

    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" x:Name = "StateHeadLabel"/>

        
        <ProgressBar Progress="0" x:Name="ProgressBarIndicator" ProgressColor="Gold" Margin="20"/>
        <Label Text="%" x:Name="PercentLabel" HorizontalOptions="Center"/>



        <HorizontalStackLayout VerticalOptions="End" HorizontalOptions="Center" Spacing="30">
            <Button Text="Start" Clicked="OnStartButtonClicked"/>
            <Button Text="Cancel" Clicked="OnCancelButtonClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>