<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab_1.ProgressBar"
             Title="ProgressBar">
    
    <StackLayout Orientation="Vertical">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" x:Name = "StateHeadLabel"/>


        <HorizontalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <ProgressBar Progress="0" x:Name="ProgressBarIndicator" ProgressColor="Gold"/>
            <Label Text="%" x:Name="PercentLabel"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout VerticalOptions="EndAndExpand" HorizontalOptions="Center">
            <Button Text="Start" Clicked="OnStartButtonClicked"/>
            <Button Text="Cancel" Clicked="OnCancelButtonClicked"/>
        </HorizontalStackLayout>
        
    </StackLayout>
    
</ContentPage>