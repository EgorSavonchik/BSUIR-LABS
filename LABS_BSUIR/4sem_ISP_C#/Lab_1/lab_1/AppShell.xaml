<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="lab_1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:lab_1"
    >

    <FlyoutItem Title="Calculator">
        <Tab>
            <ShellContent
                Title="Calculator"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
    </FlyoutItem>
    
     <FlyoutItem Title="ProgressBar">
        <Tab>
            <ShellContent
                Title="ProgressDemo"
                ContentTemplate="{DataTemplate local:ProgressBar}"
                Route="ProgressBar" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="SQLiteDemo">
        <Tab>
            <ShellContent
                Title="SQLiteDemo"
                ContentTemplate="{DataTemplate local:SQLiteDBpage}"
                Route="SQLiteDBpage" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Title="APIDemo">
        <Tab>
            <ShellContent
                Title="APIDemo"
                ContentTemplate="{DataTemplate local:APIDemoPage}"
                Route="APIDemo" />
        </Tab>
    </FlyoutItem>

</Shell>
